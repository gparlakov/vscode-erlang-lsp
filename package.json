{
  "name": "vscode-erlang-lsp",
  "displayName": "vscode-erlang-lsp",
  "description": "Erlang language server",
  "icon": "icon.png",
  "license": "MIT",
  "version": "0.1.3",
  "publisher": "vladdu",
  "repository": {
    "type": "git",
    "url": "https://github.com/vladdu/vscode-erlang-lsp.git"
  },
  "engines": {
    "vscode": "^1.14.0"
  },
  "categories": [
    "Languages",
    "Linters",
    "Extension Packs"
  ],
  "keywords": [
    "erlang"
  ],
  "activationEvents": [
    "onLanguage:erlang"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Erlang configuration",
      "properties": {
        "erlang.server.maxNumberOfProblems": {
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "erlang.runtime.location": {
          "type": "string",
          "default": "",
          "description": "Directory location of erl/escript.",
          "title": "Path of erlang binaries"
        },
        "erlang.server.debug": {
          "type": "boolean",
          "default": "false",
          "description": "Print debug traces from server.",
          "title": "Activate debug printouts from server"
        }
      }
    },
    "languages": [
      {
        "id": "erlang",
        "configuration": "./erlang.configuration.json"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "erlang.config.json",
        "url": "./lib/erlang.config.schema.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./ && ./install_server",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "mocha out/test"
  },
  "dependencies": {
    "child-process-promise": "^2.2.1",
    "denodeify": "^1.2.1",
    "expand-home-dir": "^0.0.3",
    "portfinder": "^1.0.13",
    "socket-retry-connect": "^0.0.1",
    "vscode": "^1.0.0",
    "vscode-languageclient": "^3.3.0",
    "which": "^1.3.0"
  },
  "extensionDependencies": [
    "pgourlain.erlang"
  ],
  "devDependencies": {
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.40",
    "mocha": "^2.4.5",
    "typescript": "^2.0.3",
    "typings": "^2.1.1",
    "vsce": "^1.30.0",
    "tslint": "^5.7.0"
  }
}
