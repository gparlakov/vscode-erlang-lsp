{
  "name": "vscode-erlang-lsp",
  "displayName": "vscode-erlang-lsp",
  "description": "Erlang language server",
  "icon": "icon.png",
  "license": "MIT",
  "version": "0.1.0",
  "publisher": "vladdu",
  "repository": {
    "type": "git",
    "url": "https://github.com/vladdu/vscode-erlang-lsp.git"
  },
  "engines": {
    "vscode": "^1.5.0"
  },
  "categories": [
    "Languages",
    "Linters"
  ],
  "keywords": [
    "erlang"
  ],
  "activationEvents": [
    "onLanguage:erlang"
  ],
  "main": "./out/lib/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Erlang configuration",
      "properties": {
        "erlangServer.maxNumberOfProblems": {
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "erlang.erlangPath": {
          "type": "string",
          "default": "",
          "description": "Directory location of erl/escript.",
          "title": "Path of erlang binaries"
        }
      }
    },
    "languages": [
      {
        "id": "erlang",
        "extensions": [
          ".erl",
          ".hrl",
          ".yrl",
          ".escript",
          ".app.src",
          "rebar.config"
        ],
        "aliases": [
          "Erlang"
        ],
        "configuration": "./erlang.configuration.json"
      }
    ],
    "snippets": [
      {
        "language": "erlang",
        "path": "./snippets/erlang.json"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "erlang.config.json",
        "url": "./lib/erlang.config.schema.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "mocha out/test"
  },
  "dependencies": {
    "portfinder": "^1.0.9",
    "vscode-languageclient": "^2.2.1",
    "socket-retry-connect": "^0.0.1"
  },
  "devDependencies": {
    "typescript": "^2.0.3",
    "vscode": "^1.0.0",
    "mocha": "^2.4.5",
    "@types/node": "^6.0.40",
    "@types/mocha": "^2.2.32"
  }
}
