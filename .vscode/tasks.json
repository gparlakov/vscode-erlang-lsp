{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "typescript",
            "tsconfig": "vscode-erlang-lsp/tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "npm",
            "type": "npm",
            "script": "vscode:prepublish",
            "problemMatcher": []
        },
        {
            "type": "npm",
            "script": "compile",
            "problemMatcher": []
        }
    ]
}
